{
  "builders": [
    {
      "vm_name": "centos5.10-i386-mysql-allstar",
      "guest_os_type": "RedHat",
      "iso_checksum_type": "md5",
      "iso_checksum": "ec0acc2a4f6a813ea85bf1e36acb03f0",
      "iso_url": "http://ftp.riken.jp/Linux/centos/5.10/isos/i386/CentOS-5.10-i386-bin-DVD-1of2.iso",
      "type": "virtualbox-iso",
      "ssh_password": "vagrant",
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "50000s",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "1024" ],
        [ "modifyvm", "{{.Name}}", "--cpus",   "1"    ]
      ],
      "http_directory": "http",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks-centos-5.10.cfg<enter>"
      ],
      "shutdown_command": "echo 'vagrant' | sudo -S /sbin/halt -h -p"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/vagrant.sh",
        "scripts/virtualbox.sh",
        "scripts/package5.sh",
        "scripts/mysql-build.sh",
        "scripts/cleanup.sh"
      ],
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "compression_level": 9,
      "output": "./builds/centos5.10-i386-mysql-allstar.box"
    }
  ]
}
