{
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/vagrant.sh",
        "scripts/virtualbox.sh",
        "scripts/package.sh",
        "scripts/mysql-build.sh",
        "scripts/cleanup.sh"
      ],
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "compression_level": 9,
      "output": "./builds/centos5.10-x86_64-mysql-allstar.box"
    }
  ],
  "builders": [
    {
      "vm_name": "centos5.10-x86_64-mysql-allstar",
      "guest_os_type": "RedHat_64",
      "iso_checksum_type": "md5",
      "iso_checksum": "715f7355074c00530cd6ee1d9f43cc3f",
      "iso_url": "http://ftp.riken.jp/Linux/centos/5.10/isos/x86_64/CentOS-5.10-x86_64-bin-DVD-1of2.iso",
      "type": "virtualbox-iso",
      "ssh_password": "vagrant",
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "300s",
      "disk_size": 50000,
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "1024" ],
        [ "modifyvm", "{{.Name}}", "--cpus",   "2"    ]
      ],
      "http_directory": "http",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks-centos-5.10.cfg<enter>"
      ],
      "boot_wait": "5s",
      "shutdown_command": "echo 'vagrant' | sudo -S /sbin/halt -h -p"
    }
  ]
}
